<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/black_transparent">

        <ImageView
            android:id="@+id/item_imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/item_tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_toRightOf="@id/item_imagen" />

        <TextView
            android:id="@+id/item_tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_below="@+id/item_tvId"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/item_imagen" />

        <TextView
            android:id="@+id/item_tvAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_below="@+id/item_tvTitulo"
            android:layout_toRightOf="@id/item_imagen" />

        <TextView
            android:id="@+id/item_tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_below="@+id/item_tvAutor"
            android:layout_toRightOf="@id/item_imagen" />

        <TextView
            android:id="@+id/item_tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_below="@+id/item_tvGenero"
            android:layout_toRightOf="@id/item_imagen" />
        <TextView
            android:id="@+id/item_tvLeido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_imagen"
            android:layout_below="@+id/item_tvFecha"
            android:layout_toRightOf="@id/item_imagen" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
